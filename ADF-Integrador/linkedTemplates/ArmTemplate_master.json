{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Nombre de instancia de Data Factory",
			"defaultValue": "ADF-Integrador"
		},
		"Data_Lake_NBA_accountKey": {
			"type": "secureString",
			"metadata": "Cadena protegida para \"accountKey\"de \"Data_Lake_NBA\""
		},
		"NBA_Database_connectionString": {
			"type": "secureString",
			"metadata": "Cadena protegida para \"connectionString\"de \"NBA_Database\""
		},
		"Data_Lake_NBA_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://formacionanalitica.dfs.core.windows.net/"
		},
		"KeyVault_NBA_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://KeyVault-ChrisRedfield.vault.azure.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI de la cuenta de almacenamiento que contiene las plantillas de ARM vinculadas."
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Token de SAS para la cuenta de almacenamiento que contiene las plantillas de ARM vinculadas"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ADF-Integrador_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"Data_Lake_NBA_accountKey": {
						"value": "[parameters('Data_Lake_NBA_accountKey')]"
					},
					"NBA_Database_connectionString": {
						"value": "[parameters('NBA_Database_connectionString')]"
					},
					"Data_Lake_NBA_properties_typeProperties_url": {
						"value": "[parameters('Data_Lake_NBA_properties_typeProperties_url')]"
					},
					"KeyVault_NBA_properties_typeProperties_baseUrl": {
						"value": "[parameters('KeyVault_NBA_properties_typeProperties_baseUrl')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}